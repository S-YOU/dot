#!/usr/bin/env ruby

# CP932.TXTに文字そのものを追加して出力するスクリプト

if ARGV.length == 0
  puts "Usage:   #{$0} <file>"
  puts "Example:"
  puts "    wget ftp://unicode.org/Public/MAPPINGS/VENDORS/MICSFT/WINDOWS/CP932.TXT"
  puts "    #{$0} CP932.txt"
end

def warn(str)
  STDERR.puts "\x1b[0;31m#{str}\x1b[0m"
end

filename = ARGV[0]

File.open(filename) do |f|
  f.each do |line|
    begin
      next if line[0] == "#"
      line.chomp!
      a = line.split("\t")
      code_point = a[1].to_i(16)
      a << code_point.chr(Encoding::UTF_8)
      puts a.join("\t")
    rescue
      warn "#{$.}行目を処理中にエラーが発生しました。"
      warn line
      warn $!.message
      warn $!.backtrace
    end
  end
end
