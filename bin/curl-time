#!/usr/bin/env ruby

def get(url)
  out = `curl -s -w "@$HOME/dot/bin/curl-time-format.txt" "#{url}" -o /dev/null`
  a = out.split.map {|x| x.to_f}
  return a
end

url = ARGV[0]
TRIAL_COUNT = (ARGV[1] || "5").to_i

time_starttransfer_sum = 0
time_total_sum = 0


puts "starttransfer  total"

sums = [0, 0]
(TRIAL_COUNT + 1).times do |i|
  a = get(url)

  # 最初の1回目の結果は捨てる
  next if i == 0

  printf("%-13s  %-10s\n", a[0], a[1])

  sums.length.times do |j|
    sums[j] += a[j]
  end
end

puts "Average ------------------------------------------"
printf("%-13s  %-10s\n", sums[0] / TRIAL_COUNT, sums[1] / TRIAL_COUNT)
