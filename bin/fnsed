#!/bin/sh

# sedでファイル名を置換し、リネームする
# 例： fnsed 's@hoge@moge@' hoge*

set -e

if [ "$DRY" != "" -o "$DRYRUN" != "" -o "$DRY_RUN" != "" ]; then
    DRY=1
    echo "Dry run================================================"
    EVAL=echo
else
    EVAL=eval
fi

pattern="$1"
shift

for i in "$@"; do
    $EVAL mv -v "$i" $(echo "$i" | sed -e "$pattern")
done
