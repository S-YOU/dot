#!/bin/sh

port=${port:-7000}
tmp='/tmp/httphere-tmp.rb'

if [ -d "$1" ]; then
    cd "$1"
fi

cat > "$tmp" <<'EOF'
require 'webrick'

class NonCachingFileHandler < WEBrick::HTTPServlet::FileHandler
  def prevent_caching(res)
    res['Cache-Control'] = 'public, must-revalidate, max-age=0, post-check=0, pre-check=0'
  end

  def do_GET(req, res)
    super
    prevent_caching(res)
  end
end

server = WEBrick::HTTPServer.new :Port => ARGV[0]
server.mount '/', NonCachingFileHandler, Dir.pwd
trap('INT') { server.stop }
server.start
EOF

screen -t httphere ruby "$tmp" $port

url="http://localhost:${port}"

case "$OSTYPE" in
    darwin*)
        open "$url"
        ;;
    *)
        ;;
esac
