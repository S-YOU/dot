#!/usr/bin/env ruby

################################################################################
#   標準入力から数値のリストを読み込み、ごく簡単な統計情報を表示する
################################################################################

lines = STDIN.readlines
values = lines.map(&:to_f).sort

count = values.length
sum = values.reduce(0) {|s, x| s + x}
min = values.min
max = values.max
avg = count == 0 ? 0 : (sum / count)
q1 = values[values.length / 4]
median = values[values.length / 2]
q3 = values[values.length * 3 / 4]

puts "count:\t#{count}"
puts "sum:\t#{sum}"
puts "avg:\t#{avg}"
puts "min:\t#{min}"
puts "max:\t#{max}"
puts "1/4:\t#{q1}"
puts "median:\t#{median}"
puts "3/4:\t#{q3}"
