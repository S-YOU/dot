#!/bin/bash

get_color256() {
    local colornum="$1"
    local attr="${2:-normal}"
    local fgbg="${3:-fg}"
    if [ "$fgbg" = "fg" ]; then
        a=38
    else
        a=48
    fi

    if [ "$attr" = "normal" ]; then
        printf "\x1b[$a;5;%sm" $colornum
    else
        printf "\x1b[1;$a;5;%sm" $colornum
    fi
}

attr=${1:-normal}
fgbg=${2:-fg}
msg=${3:-'Hello world'}

for i in {0..255} ; do
    get_color256 $i $attr $fgbg
    printf "%3d $msg" $i
    echo -ne "\x1b[0m"
    echo -n "    "
    if (( i == 15 )) || (( i > 15 )) && (( (i-15) % 6 == 0 )); then
        printf "\n";
    fi
done

echo
echo "Usage: $0 [normal|bold] [fg|bg] [message]"
